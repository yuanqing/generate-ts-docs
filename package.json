{
  "name": "generate-ts-docs",
  "version": "0.0.14",
  "description": "Utilities to parse type information and JSDoc annotations from TypeScript source files, and render Markdown documentation",
  "keywords": [
    "doc",
    "docs",
    "documentation",
    "jsdoc",
    "markdown",
    "typedoc",
    "typescript"
  ],
  "author": "Yuan Qing Lim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/generate-ts-docs.git"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && tsc --build",
    "clean": "rimraf '*.log' build lib",
    "example": "cd example && tsx generate-ts-docs.ts > README.md",
    "fix": "eslint --fix '{scripts,src,test}/**/*.ts' && prettier --write 'test/**/*.json'",
    "generate-docs": "npm run example && markdown-interpolate README.md",
    "lint": "eslint '{scripts,src,test}/**/*.ts'",
    "postinstall": "simple-git-hooks",
    "prepublishOnly": "npm run build",
    "reset": "npm run clean && rimraf node_modules package-lock.json && npm install",
    "test": "ava 'test/**/*.ts'",
    "watch": "npm run clean && tsc --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "github-slugger": "^2.0.0",
    "globby": "^13.1.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/github-slugger": "^1.3.0",
    "@types/node": "^20.2.4",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "ava": "^5.3.0",
    "clean-package": "^2.2.0",
    "eslint": "^8.41.0",
    "eslint-config-yuanqing": "0.0.8",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "fs-extra": "^11.1.1",
    "lint-staged": "^13.2.2",
    "markdown-interpolate": "^0.0.7",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "tsx"
    ],
    "timeout": "2m"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "lint-staged": {
    "{scripts,src,test}/**/*.ts": [
      "eslint"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint && npm run fix && npm run build && npm run test"
  },
  "clean-package": {
    "indent": 2,
    "backupPath": "./node_modules/clean-package/package.json.backup",
    "remove": [
      "scripts.postinstall",
      "simple-git-hooks"
    ]
  }
}
